<div class="container">
    <div class="mt-3 col-xs-12 text-center" id="header">
        <img src="images/cheeseburger-34315_1280.png" width="128px">
        <br>
        <h1>BRGRS</h1>
        <br>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-8 text-center" id="menu">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <div class="text-center to-eat">
                {{this.id}}. {{this.burger_name}}
            </div>
            <div class="text-center toppings"> 
                {{this.burger_toppings}}
            </div>

            <div class="eat-it">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-light"><i class="fas fa-cookie-bite"></i> EAT IT! </button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-auto text-center" class="eaten">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="col-xs-12 text-center enter_section">
    <form action="/burgers/create" method="POST">

        <input type="text" name="burger_name" placeholder="burger" class="form-control" value="" id="enter_text">

        <input type="text" name="burger_toppings" placeholder="toppings" class="form-control" value="" id="enter_text">

        <button type="submit" class="btn btn-primary spacer" id="text-enter-button">SUBMIT</button>
    </form>
    <p>Enter a burger and its toppings you would like to eat.</p>
    </div>
</div>
